<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hypermile" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>

        <item name="colorSurface">@color/primary</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/secondary_container</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>

        <item name="colorOnContainer">@color/white</item>

        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorTertiaryContainer">@color/tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/on_tertiary_container</item>

        <item name="colorError">@color/error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>

        <item name="rippleColor">@color/tertiary</item>
        <item name="android:editTextColor">@color/black</item>


    </style>

    <style name="Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/primary_container</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="InputTextOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/on_primary_container</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
    </style>

    <style name="PopupTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSurface">@color/secondary_container</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/on_primary_container</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:backgroundTint">@color/primary_container</item>
    </style>

    <style name="Button">
        <item name="backgroundTint">@drawable/btn_colours</item>
        <item name="android:textColor">@drawable/btn_text_colours</item>
    </style>

    <style name="OutlinedButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@drawable/outline_btn</item>
    </style>

    <style name="TableLayout">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/table_background</item>
        <item name="android:divider">@color/primary</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="SectionHeader">
        <item name="android:background">@color/secondary_container</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>